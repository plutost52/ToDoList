<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.todolist.sample.dao.SampleDao">
    <insert id="sampleCreate">
        INSERT INTO SAMPLE
             (
               NAME
              ,AGE
             )
        VALUES
             (
              #{name}
             , #{age}
             )

    </insert>

    <select id="sampleSearch" resultType="com.example.todolist.sample.dto.SampleResponseDto">
        SELECT *
          FROM SAMPLE
         WHERE ID = #{id}

    </select>
</mapper>
